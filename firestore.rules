rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document // common pattern
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users collection
    // Match based on document ID being the user's UID
    match /users/{userId} {
      allow read: if isAuthenticated(); // Users can read other profiles
      allow write: if isOwner(userId); // Users can only edit their own profile
      
      // Voice Profiles subcollection
      match /voice_profiles/{profileId} {
        allow read, write: if isOwner(userId);
      }
      
      // User Topics subcollection
      match /topics/{topicId} {
        allow read, write: if isOwner(userId);
      }

      // Integrations subcollection
      match /integrations/{integrationId} {
        allow read, delete: if isOwner(userId);
      }
    }

    // Posts collection
    match /posts/{postId} {
      allow read: if isAuthenticated() && (resource.data.user_id == request.auth.uid || resource.data.is_public == true);
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      
       // Analytics subcollection
      match /analytics/{analyticsId} {
        allow read: if isAuthenticated() && get(/databases/$(database)/documents/posts/$(postId)).data.user_id == request.auth.uid;
      }
    }

    // Recommended Posts collection
    match /recommended_posts/{postId} {
      allow read: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      allow create: if false; // Only created by backend
      allow update, delete: if isAuthenticated() && resource.data.user_id == request.auth.uid;
    }

    // Templates collection (Global read, restricted write)
    match /templates/{templateId} {
      allow read: if true; // Public templates
      allow write: if false; // Only admin (via backend or console)
    }
    
    // Trending Cache (Global read, backend write)
    match /trending_cache/{cacheId} {
        allow read: if isAuthenticated();
        allow write: if false;
    }
    // Support Requests
    match /support_requests/{requestId} {
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow read: if isAuthenticated() && resource.data.user_id == request.auth.uid;
    }

    // Bug Reports
    match /bug_reports/{reportId} {
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow read: if isAuthenticated() && resource.data.user_id == request.auth.uid;
    }
  }
}
